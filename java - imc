         peso int ;
         flutuar  altura ;
         medida da corda ;
         resultado flutuante ;

	 peso = inteiro . parseInt ( kg );
	 kg = JOptionPane . showInputDialog ( "Digite o seu peso: " );
 	 medida = JOptionPane . showInputDialog ( "Digite a sua altura: " );
   	 flutuar  a = flutuar . parseFloat ( altura );

      float  imc = pesoConvertido / ( alturaConvertida * alturaConvertida );
	
	Sistema . fora . println ( "Seu Indice de massa corporal = " + imc );


	 // tabela IMC https://pt.wikipedia.org/wiki/%C3%8Dndice_de_massa_corporal:

	        
       if ( imc < 17 ){
		Sistema . fora . println ( "Muito abaixo do peso");
        } else  if (( imc > 17 ) && ( imc < 18,49 )){
            Sistema . fora . println ( "Abaixo do peso" );
        } else  if (( imc > 18,50 ) && ( imc < 24,99 )){
           Sistema . fora . println ( "Peso normal" );
        } else  if (( imc > 25 ) && ( imc < 29,99 )){
           Sistema . fora . println ( "Acima do peso" );
        } else  if (( imc > 30 ) && ( imc < 34,99 )){
           Sistema . fora . println ( "Obesidade II - Severa");
        } senão  { (( imc > 30 ) && ( imc < 34,99 )){
           Sistema . fora . println ( "Obesidade III - móbida" );
     
    }
      
}

